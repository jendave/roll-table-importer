<form>
  <div class="form-group row">
    <label for="jsonfile">Roll Table File:</label>
    <div class="form-fields row">
      <file-picker type="text" target="jsonfile" name="jsonfile" placeholder="path/file.{json/csv/txt}" value="{{object.jsonfile}}" />
    </div>
  </div>
  <div class="form-group textentry" overflow="scroll">
    <textarea id="clipboardInput" name="clipboardInput" rows="15" cols="50"
      placeholder="Use File Picker icon above to select a file. Or paste text, json or CSV into this text area..."></textarea>
  </div>
  <div>
    <button type="submit" name="submit" value="submit">Okay</button>
  </div>
</form>