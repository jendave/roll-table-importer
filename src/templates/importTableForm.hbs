<form>
  <div class="form-group row">
    <label for="jsonfile">Table File:</label>
    <div class="form-fields row">

      <file-picker type="text" name="jsonfile" placeholder="path/file.{json/csv/txt}" value="{{object.jsonfile}}" />
    </div>
  </div>
  <div class="form-group textentry" overflow="scroll">
    <textarea id="clipboardInput" name="clipboardInput" rows="15" cols="50" placeholder="Use File Picker above or copy and paste text, json or CSV from clipboard..."></textarea>
  </div>
  <div>
    <button type="submit" name="submit" value="submit">Okay</button>
  </div>
</form>